	si(numero%2==0)
		aux1++
	sino si(numero==0)
		aux2++
	sino
		aux3++
	finsi
		mostrar(El numero es "numero")
	finMientras

	aux4=aux1/15*100
	aux5=aux2/15*100
	aux6=aux3/15*100
	mostrar(el porcentaje de pares son "aux4")
